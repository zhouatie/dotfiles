# ----- Path Helpers -----------------------------------------------------------
path_prepend() {
  local dir="${1/#\~/$HOME}"
  [[ -z "$dir" ]] && return
  case ":$PATH:" in
    *":$dir:"*) ;;
    *) PATH="$dir:$PATH" ;;
  esac
}

path_append() {
  local dir="${1/#\~/$HOME}"
  [[ -z "$dir" ]] && return
  case ":$PATH:" in
    *":$dir:"*) ;;
    *) PATH="$PATH:$dir" ;;
  esac
}

